@model IEnumerable<WebApplicationLogin.Models.Plan>

@{
    ViewBag.Title = "Lista planów";
}

<h2>Lista planów</h2>
<p>
    @Html.ActionLink("Dodaj przedmiot do listy", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubjectID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectID)
            </td>
            <td>
                @Html.ActionLink("Szczegóły", "Details", new { id = item.PlanID }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.PlanID })
            </td>
        </tr>
    }

</table>
