@model IEnumerable<WebApplicationLogin.Models.Subject>

@{
    ViewBag.Title = "Lista przedmiotów";
}

<h2>Lista przedmiotów</h2>

<p>
    @Html.ActionLink("Dodaj nowy", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FilePath)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FilePath)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.SubjectID }) |
            @Html.ActionLink("Szczegół", "Details", new { id=item.SubjectID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.SubjectID })
        </td>
    </tr>
}

</table>
